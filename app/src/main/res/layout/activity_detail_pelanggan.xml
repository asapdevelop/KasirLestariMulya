<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPelanggan"
    android:background="@color/colorPrimaryDark">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_person_black"
                />
            <TextView
                android:id="@+id/detail_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/detail_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="normal"
                android:singleLine="true"
                android:background="@android:color/transparent"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/white"
                app:met_primaryColor="@color/white"
                app:met_baseColor="@color/white"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                android:hint="Alamat"
                android:textSize="16sp"
                android:enabled="false"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/detail_tabungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="normal"
                android:singleLine="true"
                android:background="@android:color/transparent"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/white"
                app:met_primaryColor="@color/white"
                app:met_baseColor="@color/white"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                android:hint="Total Tabungan"
                android:textSize="16sp"
                android:enabled="false"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/detail_hutang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="normal"
                android:singleLine="true"
                android:background="@android:color/transparent"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/white"
                app:met_primaryColor="@color/white"
                app:met_baseColor="@color/white"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                android:hint="Total Hutang"
                android:textSize="16sp"
                android:enabled="false"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/detail_no_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="normal"
                android:singleLine="true"
                android:background="@android:color/transparent"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/white"
                app:met_primaryColor="@color/white"
                app:met_baseColor="@color/white"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                app:met_floatingLabelTextColor="@color/white"
                app:met_helperTextColor="@color/white"
                android:hint="No Hp"
                android:textSize="16sp"
                android:enabled="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/detail_ambil_tabungan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ambil Tabungan"/>
                <Button
                    android:id="@+id/detail_bayar_hutang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bayar Hutang"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>